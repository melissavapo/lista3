somaPares = 0
quantidadePares = 0

numero1 = int(input("Digite o primeiro número:"))
if numero1 % 2 == 0:
    somaPares = somaPares + numero1
    quantidadePares = quantidadePares + 1

numero2 = int(input("Digite o segundo número:"))
if numero2 % 2 == 0:
    somaPares = somaPares + numero2
    quantidadePares = quantidadePares + 1

numero3 = int(input("Digite o terceiro número:"))
if numero3 % 2 == 0:
    somaPares = somaPares + numero3
    quantidadePares = quantidadePares + 1

numero4 = int(input("Digite o quarto número:"))
if numero4 % 2 == 0:
    somaPares = somaPares + numero4
    quantidadePares = quantidadePares + 1

if quantidadePares > 0:
    print(f"Média dos pares: {somaPares / quantidadePares}")
else:
    print("Nenhum par digitado.")
